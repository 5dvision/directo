{
    "name": "5dvision/directo",
    "description": "Production-ready PHP SDK for Directo XMLCore API",
    "type": "library",
    "license": "MIT",
    "keywords": ["directo.ee", "directo", "sdk", "xmlcore", "erp"],
    "homepage": "https://5dvision.ee",
    "authors": [
        {
            "name": "5D Vision",
            "email": "info@5dvision.ee",
            "homepage": "https://5dvision.ee"
        },
        {
            "name": "Kullar Kert",
            "email": "kullar@5dvision.ee"
        }
    ],
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require": {
        "php": "^8.2",
        "guzzlehttp/guzzle": "^7.0",
        "psr/log": "^3.0",
        "ext-dom": "*",
        "ext-libxml": "*"
    },
    "require-dev": {
        "laravel/pint": "^1.27",
        "pestphp/pest": "^2.0|^3.0"
    },
    "autoload": {
        "psr-4": {
            "Directo\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Directo\\Tests\\": "tests/"
        }
    },
    "bin": [
        "bin/directo-schemas"
    ],
    "scripts": {
        "test": "pest",
        "schemas:update": "@php bin/directo-schemas"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
